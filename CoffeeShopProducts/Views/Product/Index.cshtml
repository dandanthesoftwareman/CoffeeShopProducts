@model List<Product>
@{
    ViewData["Title"] = "Our Menu";
}

<div class="text-center">
    <h1 class="display-4">Our Menu</h1>
    <p>Click on any product product below to learn more</p>
    <br />
</div>

@{
    foreach(Product p in Model)
    {
        <div>
            <h2><a asp-controller="Product" asp-action="Details" asp-route-productId="@p.Id">@p.Name</a></h2>
            <p>$@p.Price</p>
        </div>
    }
}